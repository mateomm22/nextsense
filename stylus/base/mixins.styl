// Mixins
mq($size)
  @media (min-width unit($size, px))
    {block}

font-sans($weight = 400)
  font-family 'Miletus Grotesk', sans-serif
  font-weight $weight
  font-style normal

font-serif()
  font-family 'Victor Serif', serif
  font-style normal
  font-size-adjust ex-height 0.51

transition($prop, $duration = .3s)
  transition $prop $duration ease-in

fullAbs()
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  width 100%
  height 100%

centerAbs()
  position absolute
  top 50%
  left 50%
  z-index 1
  transform translate(-50%, -50%)

fit($val = cover, $pos = center)
  @supports(object-fit cover)
    height 100%
    object-fit $val
    object-position $pos


// Variables
$black = #2B2E3F
$white = #ffffff
$lavender = #AAA8FF
$berry = #7F9EF8
$periwinckle = #C1CFF8
$blush = #FAD0F3
$yellow = #FFFBA5

:root
  --black $black
  --white $white
  --lavender $lavender
  --berry $berry
  --blush $blush
  --yellow $yellow
  --container-padding 24px
  --section-padding 48px
  --grid-margin 8px

  +mq(768)
    --grid-margin 20px
    --container-padding 48px
    --section-padding 72px

  +mq(992)
    --grid-margin 32px
    --container-padding 80px
    --section-padding 110px
