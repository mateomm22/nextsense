// Variables
$black = #2c2c2c
$black_bg = #202020
$white = #ffffff
$blue = #0c2691
$blue_light = #D4E8F3
$gray = #f0f0f0

// Mixins
mq($size)
  @media (min-width unit($size, px))
    {block}

font-sans($weight = 400)
  font-family sans-serif
  font-weight $weight
  font-style normal

font-serif($weight = 400)
  font-family serif
  font-style normal

transition($prop, $duration = .3s)
  transition $prop $duration ease-in

fullAbs()
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  width 100%
  height 100%

centerAbs()
  position absolute
  top 50%
  left 50%
  z-index 1
  transform translate(-50%, -50%)

fit($val = cover, $pos = center)
  @supports(object-fit cover)
    height 100%
    object-fit $val
    object-position $pos