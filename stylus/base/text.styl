// Base Paragraph
.text
  margin-bottom 0

  &,
  p
    margin-bottom 2.5em
    font-size 15px
    line-height 1.7
    font-body()

    +mq(768)
      font-size 18px

  p:last-child
      margin-bottom 0


.text--big
  font-size 20px

  +mq(768)
    font-size 24px


.text--small
  font-size 16px

  +mq(768)
    font-size 18px

.text--xsmall
  font-size 13px

  +mq(768)
    font-size 14px


.text--500
  font-weight 700


// Headlines
.title
  margin-bottom 1em
  font-size clamp(24px, 4vw, 34px)
  line-height 1.1
  letter-spacing: .05em
  font-title()

.title--big
  margin-bottom 0.5em
  font-size clamp(32px, 5vw, 48px)

.title--mid
  margin-bottom 0.5em
  font-size clamp(26px, 4vw, 34px)
  letter-spacing 0.05em


.title--small
  font-size clamp(16px, 3vw, 20px)
  letter-spacing: .075em


.title--xsmall
  font-size clamp(18px, 2vw, 20px)
  letter-spacing: .05em


.title--xxsmall
  font-size clamp(16px, 1.85vw, 18px)


.title--tab
  font-body()
  font-size 16px

  +mq(768)
    font-size 18px


.title--footer
  font-size 12px

  +mq(768)
    font-size 14px


.title--hero
  font-size clamp(48px, 12vw, 96px)
  margin-bottom 0
  letter-spacing 0.015em
  font-weight 300



.eyebrow
  text-transform uppercase
  letter-spacing 0.12em
  font-size 14px
  font-body(400)
