// Base Paragraph
.text
  margin-bottom 0
  --size: 16px

  &,
  p
    margin-bottom 1em
    font-size var(--size)
    line-height 1.3

  p:last-child
      margin-bottom 0


.text--lg
  --size 18px

  +mq(768)
    --size 20px

.text--xl
  --size 20px
  line-height 1.2

  +mq(768)
    --size 27px


// Headlines
.title
  margin-bottom 0
  font-size clamp(24px, 4vw, 34px)
  line-height 1
  font-size clamp(2.25rem, 1.483rem + 2.7273vw, 3.9375rem) // min: 36px, max: 63px

.title--lg
  font-size clamp(2.5rem, 1.25rem + 4.4444vw, 5.25rem) // min: 40px, max: 84

.title--xl
  font-size clamp(3rem, 1.1818rem + 6.4646vw, 7rem) // min: 48px, max: 112px


.eyebrow
  text-transform uppercase
  letter-spacing 0.12em
  font-size 14px
  font-body(400)
