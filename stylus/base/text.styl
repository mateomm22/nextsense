// Base Paragraph
.text
  margin-bottom 0
  --size 16px

  +mq(2000)
    --size 20px

  &,
  p
    margin-bottom 1em
    font-size var(--size)
    line-height 1.3

  p:last-child
      margin-bottom 0


.text--sm
  --size 14px

  +mq(2000)
    --size 18px


.text--lg
  --size 18px

  +mq(768)
    --size 20px
  +mq(2000)
    --size 24px

.text--xl
  --size 20px
  line-height 1.2

  +mq(768)
    --size 27px
  +mq(2000)
    --size 32px


// Headlines
.title
  margin-bottom 0
  line-height 1
  font-weight 400
  font-size clamp(2.25rem, calc(1.483rem + 2.7273vw), 3.9375rem) // min: 36px, max: 63px

.title--sm
  font-size clamp(1.5rem, calc(1.1591rem + 1.2121vw), 2.25rem); // min: 24px, max: 36px

.title--lg
  font-size clamp(2.5rem, calc(1.25rem + 4.4444vw), 5.25rem) // min: 40px, max: 84px

.title--xl
  font-size clamp(3rem, calc(1.1818rem + 6.4646vw), 7rem) // min: 48px, max: 112px


.eyebrow
  position relative
  padding 8px 19px
  font-size 14px
  color $white
  font-body(400)