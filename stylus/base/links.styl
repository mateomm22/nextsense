.btn
  --bg-color: $lavender
  --text-color: $black
  --hover-bg: $black
  --hover-text: $white
  position relative
  display inline-flex
  align-items center
  justify-content center
  background-color var(--bg-color)
  padding 16px 30px
  border-radius: 30px
  border 0
  transition background 0.2s ease-in-out
  cursor pointer
  overflow hidden

  &:hover
    &:before
      scale 1

    span
      color var(--hover-text)


  span
    display block
    position relative
    font-size 15px
    transition color 0.2s ease-in-out
    color var(--text-color)
    cursor inherit
    font-body(600)

  &:before
    content ''
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    border-radius inherit
    scale 0
    transform-origin: center
    transition scale 0.2s ease-in
    background-color rgba($black, 0.2)


.btn--outline
  --bg-color: transparent
  --text-color: $black
  --hover-bg: $lavender
  --hover-text: $black
  border 1px solid $black

  &:hover
    border-color var(--hover-bg)


.btn--clear
  --bg-color: rgba($white, 0.3)

.btn--white
  --bg-color: $white


.link
  display inline-flex
  align-items center
  color $blue
  text-transform uppercase
  text-decoration underline
  cursor pointer
  font-size clamp(14px, 2vw, 16px)
  font('headline', 400)

  &:hover
    text-decoration


.link--black
  color $black


.link--white
  color $white
