.home-features-slideshow
  position relative
  background-color black

.home-features-slideshow__headline
  color $white
  text-align center
  position absolute
  top 0
  left 0
  width 100%
  padding-top 40px

  +mq(768)
    padding-top 100px

  .title
    margin-bottom 0.5em
    font-serif()

  .text
    max-width 550px
    margin: 0 auto

.home-slideshows__bg
  position absolute
  top 0
  width 100%
  height 65lvh
  z-index 0

  +mq(768)
    height 100lvh

  &::before
    content ''
    background-color rgba(black, 0.4)
    display none
    z-index 1
    fullAbs()

    +mq(768)
      display block

  &::after
    content ''
    display block
    height 200px
    width 100%
    position absolute
    bottom -10px
    background linear-gradient(0deg, black 30%, rgba(black, 0) 100%)
    z-index 1

    +mq(768)
      display none

  .home-feature__bg
    opacity 0

    &:first-child
      opacity 1

    img
      fullAbs()
      fit(cover , left)


.single-home-feature
  position relative
  height 300lvh

  .single-feature__sticky
    position sticky
    top 0
    height 100lvh
    // padding-top 75lvh
    padding-block 48px

    +mq(768)
      padding-block 120px

    .container
      height 100%
      display grid
      grid-template 1fr auto / 1fr
      align-items end

      +mq(768)
        grid-template auto / 1fr 1fr


.single-feature__graphic
  margin-bottom 3em
  width 100%

  +mq(768)
    position absolute
    bottom 50%
    left 50%
    translate -50% 50%
    grid-column 2 / 3
    margin-bottom 0
    width 90%
  +mq(1400)
    width 85%

  img
    display block
    margin 0 auto


