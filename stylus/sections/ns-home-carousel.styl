.wrap-home-carousel
  position relative
  background-color $white
  padding-block var(--section-padding)

.home-carousel__headline
  margin-bottom 3em

  +mq(768)
    margin-bottom 5em

  .title
    text-align center
    font-sans()

    span
      display block
      font-serif()

.home-carousel
  max-width 1114px
  margin 0 auto
  padding-bottom 48px

  .swiper-pagination,
  .swiper-button
    top auto

  .swiper-pagination
    bottom 10px

    .swiper-pagination-bullet
      width 6px
      height @width
      margin 0 2px

    .swiper-pagination-bullet-active
      background $black

  .swiper-button
    height auto
    bottom 12px

    +mq(576)
      bottom 10px

    &::after
      display none

    svg
      fill $black

  .swiper-button-prev
    left auto
    right 55%

  .swiper-button-next
    left 55%

